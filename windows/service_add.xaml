<Window x:Class="barbi_shop.windows.service_add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:barbi_shop.windows"
        mc:Ignorable="d"
        Title="service_add" Height="600" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <GroupBox Header="Наименование" Grid.Row="0">
            <TextBox Name="service_name_tb"></TextBox>
        </GroupBox>
        <GroupBox Header="Цена" Grid.Row="1">
            <TextBox Name="service_price_tb"></TextBox>
        </GroupBox>
        <GroupBox Header="Фото" Grid.Row="2">
            <Button Content="Добавить" Name="add_service_photo_btn" Click="add_service_photo_btn_Click"></Button>
        </GroupBox>

        <Button Content="Добавить" Grid.Row="3" Name="add_new_service_btn" Click="add_new_service_btn_Click"></Button>
    </Grid>
</Window>
