<Window x:Class="barbi_shop.windows.client_editwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:barbi_shop.windows"
        mc:Ignorable="d"
        Title="client_editwindow" Height="600" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <GroupBox Header="ФИО" Grid.Row="0">
            <TextBox Name="client_name_tb"></TextBox>
        </GroupBox>
        <GroupBox Header="Телефон" Grid.Row="1">
            <TextBox Name="client_phone_tb"></TextBox>
        </GroupBox>
        <GroupBox Header="Фото" Grid.Row="2">
            <Button Name="client_photo_tb" Content="Добавить фото" Click="client_photo_tb_Click"></Button>
        </GroupBox>

        <Button Content="Изменить" Grid.Row="3" Name="add_new_client_btn" Click="add_new_client_btn_Click" Height="32" Margin="0,8,0,0" VerticalAlignment="Top" Cursor="Hand"></Button>
    </Grid>
</Window>
